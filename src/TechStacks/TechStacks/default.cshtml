<html lang="en" ng-app="techStackApp">  <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title ng-bind="title">TechStacks</title>
        <meta name="description" content="TechStacks lets you Discover the Hottest Technology Stacks of the most popular Startups and Apps using your favorite languages and technologies!">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="Technology, Startups, TechnologyStacks"/>
        <link href="/img/favicon.png" rel="icon">

        <!--build:css /lib/css/bootstrap.min.css-->
        <link href="/bower_components/roboto-fontface/roboto-fontface.css" rel="stylesheet" />
        <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/bootstrap-theme.css" />
        <link href="/bower_components/chosen/chosen.css" rel="stylesheet" />
        <!-- endbuild -->
        <!--build:css /css/style.min.css-->
        <link rel="stylesheet" href="/css/app.css" />
        <!-- endbuild -->
        <!-- build:js /lib/js/jquery.min.js -->
        <script src="/bower_components/jquery/dist/jquery.js"></script>
        <script src="/bower_components/chosen/chosen.jquery.js"></script>
        <!-- endbuild -->
        <!-- build:js /lib/js/bootstrap.min.js -->
        <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
        <!-- endbuild -->
        <!-- build:js /lib/js/modernizr.min.js -->
        <script src="/bower_components/modernizr/modernizr.js"></script>
        <!-- endbuild -->
    </head>
    <body init-data>
        <div class="navbar navbar-inverse" role="navigation" ng-controller="navigationCtrl">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="logo" ng-class="{ active: IsRouteActive('/')}" class="navbar-brand" href="/">
                        <img src="/img/logo-280.png" width="30" height="30"/>
                        TechStacks
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li ng-class="{ active: IsRouteActive('/stacks')}"><a href="/stacks">Stacks</a></li>
                        <li ng-class="{ active: IsRouteActive('/tech')}"><a href="/tech">Technologies</a></li>
                        <li ng-show="isAuthenticated" ng-class="{ active: IsRouteActive('/favorites')}"><a href="/favorites">Favorites</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li ng-hide="isAuthenticated">
                            <div style="padding: 5px 0 0 0">
                                <a href="/auth/github"><img src="/img/github_normal.png" alt="Sign in with Github"/></a>
                                <a href="/auth/twitter"><img src="/img/twitter_normal.png" alt="Sign in with Twitter"/></a>
                            </div>
                            <div>
                                <p style="font-size: 12px; text-align: center; padding: 5px 0 0 0;">
                                    sign-in to add techstacks
                                </p>
                            </div>
                        </li>
                        <li ng-show="isAuthenticated" style="padding: 12px 0 0 0"><a href="/auth/logout">Logout</a></li>
                        <li ng-show="isAuthenticated">
                            <span>
                                <a href="/users/{{currentUserSession.UserName}}">
                                    <img style="margin-top:5px;border-radius:50%" ng-src="{{currentUserSession.ProfileUrl}}" height="50" />
                                </a>
                            </span>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container"><div ng-view></div></div>
        
        <div id="footer">
            site design / logo &copy; 2015 
            <a href="https://servicestack.net">Service Stack</a>; 
            user contributions licensed under 
            <a href="http://creativecommons.org/licenses/by-sa/3.0/">cc by-sa 3.0</a>
            with attribution required.
            <a href="/sitemap.xml" target="_blank">sitemap.xml</a>,
            seo-friendly <a href="?html=server">static website</a>
        </div>
        
        <!-- build:js /lib/js/angular.min.js -->
        <script src="/bower_components/angular/angular.js"></script>
        <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
        <script src="/bower_components/angular-route/angular-route.js"></script>
        <!-- endbuild -->
        <!-- build:js /js/app.min.js -->
        <script src="/js/home/controllers.js"></script>
        <script src="/js/favorites/controllers.js"></script>
        <script src="/js/tech/controllers.js"></script>
        <script src="/js/tech/services.js"></script>
        <script src="/js/stacks/controllers.js"></script>
        <script src="/js/stacks/services.js"></script>
        <script src="/js/stacks/filters.js"></script>
        <script src="/js/navigation/controllers.js"></script>
        <script src="/js/user/controllers.js"></script>
        <script src="/js/user/services.js"></script>
        <script src="/js/components/chosen/directives.js"></script>
        <script src="/js/app.js"></script>
        <!-- endbuild -->

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-7722718-10', 'auto');
            ga('send', 'pageview');

        </script>

    </body>
</html>